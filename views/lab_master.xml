<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="lerm_lab_master_form" model="ir.ui.view">
            <field name="name">lerm.lab.master.form</field>
            <field name="model">lerm.lab.master</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group style="width:100%">
                            <group>
                                <field name='lab_name'/>
                                <field name='lab_certificate_no'/>
                                <field name='street'/>
                                <field name='street2'/>
                                <field name='city'/>
                                <field name='state_id'/>
                                <field name='zip'/>
                                <field name='country_id'/>

                                <field name='non_nabl_header' filename="non_nabl_header_filename"/>
                                <field name='non_nabl_header_filename' invisible="1"/>
                            </group>
                            <group>
                                <field name='lab_location'/>
                                <field name='upi_id'/>
                                <field name='gst'/>
                                <field name='ulr_sequence'/>
                                <field name='header_image' filename="header_filename"/>
                                <field name='header_filename' invisible="1"/>
                                <field name='footer_image' filename="footer_filename"/>
                                <field name='footer_filename' invisible="1"/>
                                <field name='watermark_image' filename="watermark_filename"/>
                                <field name='watermark_filename' invisible="1"/>


                            </group>
                        </group>
                        <field name="lab_location_line">
                            <tree editable="bottom">
                                <field name='location_name'/>
                                <field name='location_code'/>

                            </tree>
                        </field>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
