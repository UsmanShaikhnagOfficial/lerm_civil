<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="mechanical_coupler_view" model="ir.ui.view">
        <field name="name">mechanical.coupler.form</field>
        <field name="model">mechanical.coupler</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="srf_id" invisible="1"/>
                        <field name="sample_id" readonly="1" />
                        <field name="parameter_id"/>
                    </group>
                    <group>
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </group>
                    <group>
                        <field name='outer_diameter'/>
                        <field name='nominal_cross_section'/>
                        <field name='gauge_length'/>
                        <field name='gauge_length_max_force'/>
                        <field name='ultimate_tensile_load'/>
                        <field name='ultimate_tensile_strength'/>
                        <field name='total_elongation'/>
                        <field name='distance_fracture'/>
                        <field name='failure_location'/>
                        <field name='result'/>
                    </group>
                     <button
                            type="object"
                            class="oe_highlight" 
                            name="open_eln_page"
                            string="Submit"
                            />
                </sheet>
            </form>
        </field>
        </record>

    </data>
</odoo>