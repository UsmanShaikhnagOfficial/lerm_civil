<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="mechanical_crushing_value_coarse_aggregate_view" model="ir.ui.view">
        <field name="name">mechanical.crushing.value.coarse.aggregate.form</field>
        <field name="model">mechanical.crushing.value.coarse.aggregate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="srf_id" invisible="1"/>
                        <field name="sample_id" readonly="1" />
                        <field name="parameter_id"/>
                       
                    </group>
                    <group>
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </group>
                    <field name="child_lines" nolabel="1" >
                            <tree editable="bottom">
                                <field name='sample_no'/>
                                <field name='wt_of_cylinder'/>
                                <field name='total_wt_of_dried'/>
                                <field name='total_wt_aggregate'/>
                                <field name='wt_of_aggregate_passing'/>
                                <field name='wt_of_aggregate_retained'/>
                                <field name='crushing_value'/>
                              
                            </tree>
                           
                    </field> 
                            <group>
                               <field name='average_crushing_value'/>
                            </group>
                     
                </sheet>
            </form>
        </field>
    </record>
   


    </data>
</odoo>