<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="half_cell_view" model="ir.ui.view">
        <field name="name">ndt.half.cell.form</field>
        <field name="model">ndt.half.cell</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="srf_id" invisible="1"/>
                        <field name="sample_id"  readonly="1"/>
                        <field name="parameter_id" invisible="1"/>
                    </group>
                     <group style="width:50%">
                        <field name="structure" string="Structure Age" identity="extra"/>
                        <field name="temperature" string="Temperature Â°C" identity="extra"/>
                    </group>
                    <group style="width:50%">
                        <field name="instrument"/>
                    </group>

                    <group>
                        <h1>
                            <field name="name" readonly="1" nolabel="1"/>
                        </h1>
                    </group>
                    <field name="child_lines_1" nolabel="1" >
                            <tree editable="bottom">
                                <field name="member" />
                                <field name="level" />
                                <field name="r1" />
                                <field name="r2" />
                                <field name="r3" />
                                <field name="r4" />
                                <field name="r5" />
                                <field name="r6" />
                                <field name="avg" />
                                <field name="corrosion_condition" />
                                
                            </tree>
                    </field>
                    <button
                            type="object"
                            name="button_press_action"
                            string="Update"
                            />
                    <field name="child_lines_2" nolabel="1" >
                            <tree editable="bottom">
                                <field name="member" />
                                <field name="level" />
                                <field name="r1" />
                                <field name="r2" />
                                <field name="r3" />
                                <field name="r4" />
                                <field name="r5" />
                                <field name="r6" />
                                <field name="avg" />
                                <field name="corrosion_condition" />
                            </tree>
                    </field>
                    <field name="notes" nolabel="1" >
                            <tree editable="bottom">
                                <field name="notes" />
                               
                            </tree>
                    </field>
                    
                </sheet>
            </form>
        </field>
        </record>

    </data>
</odoo>