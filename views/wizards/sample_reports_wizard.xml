<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="sample_reports_wizard" model="ir.ui.view">
        <field name="name">sample.reports.wizard.form</field>
        <field name="model">sample.reports.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                <group>
                    <field name="customer" />
                    <field name="from_date" />
                    <field name="to_date" />
                    
                </group>
                <footer>
                    <button
                            type="object"
                            class="oe_highlight" 
                            name="print_srf_reports"
                            string="Print"/>
                    <button
                            type="object"
                            name="discard_print"
                            string="Discard"/>
                </footer>
            </sheet>
            </form>
        </field>
        </record>
    </data>
</odoo>